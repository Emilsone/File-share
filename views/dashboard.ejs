<!DOCTYPE html>
<html>
  <head>
    <title>File Share | Dashboard</title>
    <%- include('./partials/meta-tags.ejs'); -%>
  </head>
  <body>
    <div id="app">
      <div class="form-group">
        <input
          type="search"
          v-model="search"
          @input="searchFile"
          class="form-control"
          placeholder="Search for files"
        />
      </div>
      <div class="form-group">
        <button @click="sortFiles()" class="btn btn-sm">All</button>
        <button @click="sortFiles('IMGAGE')" class="btn btn-sm">Images</button>
        <button @click="sortFiles('VIDEO')" class="btn btn-sm">Videos</button>
        <button @click="sortFiles('FILES')" class="btn btn-sm">Files</button>
        <button @click="sortFiles('APP')" class="btn btn-sm">Apps</button>
      </div>
      <form method="POST" action="/api/files" enctype="multipart/form-data">
        <input
          type="file"
          class="btn"
          name="upload"
          multiple
          @change.prevent="upload"
        />
      </form>
      <div v-if="uploadPercent > 0">{{uploadPercent}}%</div>
      <div class="container">
        <file-block></file-block>
      </div>
    </div>
    <script src="script/vue.js"></script>
    <script src="script/socket.io.js"></script>
    <script src="script/main.js"></script>
  </body>
</html>
